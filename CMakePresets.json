{
    "version": 3,
    "configurePresets": [
        {
            "hidden": true,
            "name": "Configure_Base",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_POLICY_VERSION_MINIMUM":    "3.5",
                "CMAKE_EXPORT_COMPILE_COMMAND":    "ON",
                "ERHE_USE_PRECOMPILED_HEADERS":    "OFF",
                "ERHE_FONT_RASTERIZATION_LIBRARY": "freetype",
                "ERHE_GLTF_LIBRARY":               "fastgltf",
                "ERHE_GUI_LIBRARY":                "imgui",
                "ERHE_PHYSICS_LIBRARY":            "jolt",
                "ERHE_PROFILE_LIBRARY":            "tracy",
                "ERHE_RAYTRACE_LIBRARY":           "bvh",
                "ERHE_SVG_LIBRARY":                "plutosvg",
                "ERHE_TEXT_LAYOUT_LIBRARY":        "harfbuzz",
                "ERHE_WINDOW_LIBRARY":             "sdl",
                "ERHE_XR_LIBRARY":                 "openxr",                
                "ERHE_SPIRV":                      "OFF"
            }
        },
        {
            "name":     "Configure_OpenGL_Debug",
            "inherits": "Configure_Base",
            "cacheVariables": {
                "ERHE_GRAPHICS_LIBRARY": "opengl",
                "CMAKE_BUILD_TYPE":      "Debug"
            }
        },
        {
            "name":     "Configure_OpenGL_Release",
            "inherits": "Configure_Base",
            "cacheVariables": {
                "ERHE_GRAPHICS_LIBRARY": "opengl",
                "CMAKE_BUILD_TYPE":      "Release"
            }
        },
        {
            "name": "Configure_OpenGL_ASAN_Debug",
            "inherits": "Configure_Base",
            "cacheVariables": {
                "ERHE_GRAPHICS_LIBRARY": "opengl",
                "ERHE_USE_ASAN":         "ON",
                "CMAKE_BUILD_TYPE":      "Debug"
            }
        },
        {
            "name": "Configure_OpenGL_ASAN_Release",
            "inherits": "Configure_Base",
            "cacheVariables": {
                "ERHE_GRAPHICS_LIBRARY": "opengl",
                "ERHE_USE_ASAN":         "ON",
                "CMAKE_BUILD_TYPE":      "Release"
            }
        },
        {
            "name": "Configure_vulkan_Debug",
            "inherits": "Configure_Base",
            "cacheVariables": {
                "ERHE_GRAPHICS_LIBRARY": "vulkan",
                "ERHE_SPIRV":            "ON",
                "CMAKE_BUILD_TYPE":      "Debug"
            }
        },
        {
            "name": "Configure_vulkan_Release",
            "inherits": "Configure_Base",
            "cacheVariables": {
                "ERHE_GRAPHICS_LIBRARY": "vulkan",
                "ERHE_SPIRV":            "ON",
                "CMAKE_BUILD_TYPE":      "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name":            "Build_Base",
            "hidden":          true,
            "verbose":         false,
            "configurePreset": "Configure_Base"
        },
        {
            "name":            "Build_OpenGL_Debug",
            "displayName":     "Build_OpenGL_Debug",
            "configurePreset": "Configure_OpenGL_Debug",
            "configuration":   "Debug"
        },
        {
            "name":            "Build_OpenGL_Release",
            "displayName":     "Build_OpenGL_Release",
            "configurePreset": "Configure_OpenGL_Release",
            "configuration":   "Release"
        },
        {
            "name":            "Build_OpenGL_ASAN_Debug",
            "displayName":     "Build_OpenGL_ASAN_Debug",
            "configurePreset": "Configure_OpenGL_ASAN_Debug",
            "configuration":   "Debug"
        },
        {
            "name":            "Build_OpenGL_ASAN_Release",
            "displayName":     "Build_OpenGL_ASAN_Release",
            "configurePreset": "Configure_OpenGL_ASAN_Release",
            "configuration":   "Release"
        },
        {
            "name":            "Build_vulkan_Debug",
            "displayName":     "Build_vulkan_Debug",
            "configurePreset": "Configure_vulkan_Debug",
            "configuration":   "Debug"
        },
        {
            "name":            "Build_vulkan_Release",
            "displayName":     "Build_vulkan_Release",
            "configurePreset": "Configure_vulkan_Release",
            "configuration":   "Release"
        }
    ]
}
