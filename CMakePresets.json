{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 6
    },
    "configurePresets": [
        {
            "hidden":    true,
            "name":      "Base",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS":   "ON",
                "ERHE_USE_PRECOMPILED_HEADERS":    "OFF",
                "ERHE_FONT_RASTERIZATION_LIBRARY": "freetype",
                "ERHE_GLTF_LIBRARY":               "fastgltf",
                "ERHE_GUI_LIBRARY":                "imgui",
                "ERHE_PHYSICS_LIBRARY":            "jolt",
                "ERHE_PROFILE_LIBRARY":            "tracy",
                "ERHE_RAYTRACE_LIBRARY":           "bvh",
                "ERHE_SVG_LIBRARY":                "plutosvg",
                "ERHE_TEXT_LAYOUT_LIBRARY":        "harfbuzz",
                "ERHE_WINDOW_LIBRARY":             "sdl",
                "ERHE_XR_LIBRARY":                 "openxr",                
                "ERHE_SPIRV":                      "OFF"
            }
        },
        {
            "name":     "OpenGL",
            "hidden":   true,
            "inherits": "Base",
            "cacheVariables": {
                "ERHE_GRAPHICS_LIBRARY": "opengl",
                "ERHE_SPIRV":            "OFF"
            }
        },
        {
            "name":     "OpenGL_Debug",
            "inherits": "OpenGL",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name":     "OpenGL_Release",
            "inherits": "OpenGL",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name":     "OpenGL_ASAN_Debug",
            "inherits": "OpenGL_Debug",
            "cacheVariables": {
                "ERHE_USE_ASAN":    "ON"
            }
        },
        {
            "name":     "OpenGL_ASAN_Release",
            "inherits": "OpenGL_Release",
            "cacheVariables": {
                "ERHE_USE_ASAN":    "ON"
            }
        },
        {
            "name":     "Vulkan",
            "hidden":   true,
            "inherits": "Base",
            "cacheVariables": {
                "ERHE_GRAPHICS_LIBRARY": "vulkan",
                "ERHE_SPIRV":            "ON"
            }
        },
        {
            "name":     "Vulkan_Debug",
            "inherits": "Vulkan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":      "Debug"
            }
        },
        {
            "name": "Vulkan_Release",
            "inherits": "Vulkan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":      "Release"
            }
        }
    ]
}
